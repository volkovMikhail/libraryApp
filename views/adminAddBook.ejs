<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('./partials/head') %>
        <title>Меню администратора</title>
    </head>
    <body>
        <%- include('./partials/navbar') %> <%-include('./partials/adminHeader')
        %>
        <form action="/admin/addbook" method="post" enctype="multipart/form-data" class="container mt-4">
            <div class="form-group">
                <label for="inputName">Название книги</label>
                <input
                    type="text"
                    class="form-control"
                    id="inputName"
                    name="name"
                    required
                />
            </div>
            <div class="form-group">
                <label for="inputAuthor">Автор</label>
                <input
                    type="text"
                    class="form-control"
                    id="inputAuthor"
                    name="author"
                    required
                />
            </div>
            <div class="form-group">
                <label for="inputDiscription">Описание</label>
                <textarea
                    class="form-control"
                    id="inputDiscription"
                    rows="3"
                    name="discription"
                    required
                ></textarea>
            </div>
            <div class="form-group">
                <label for="inputImage">Картинка</label>
                <input
                    type="file"
                    class="form-control-file"
                    id="inputImage"
                    name="image"
                    required
                />
            </div>
            <div class="form-group">
                <label for="inputName">Год издания</label>
                <input
                    type="number"
                    class="form-control"
                    id="inputName"
                    onfocus="this.value = new Date().getFullYear().toString()"
                    name="year"
                    required
                />
            </div>
            <input
                type="submit"
                class="btn btn-warning"
                value="Добавить книгу"
            />
        </form>
        <% if(formProcessed) { %>
        <script>
            window.onload = () => {
                alert('Книга добавлена!');
            };
        </script>
        <% } %>
    </body>
</html>
