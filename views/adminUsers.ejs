<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('./partials/head') %>
        <title>Меню администратора</title>
    </head>
    <body>
        <%- include('./partials/navbar') %> <%-
        include('./partials/adminHeader') %>
        <div class="alert alert-warning m-3 p-3">
            <div class="form-col m-2">
                <div class="form-row">
                    <input
                        type="text"
                        class="form-control"
                        placeholder="Поиск по номеру телефона"
                        id="phoneSearch"
                    />
                </div>
                <div class="form-inline mt-2 mb-1">
                    <label class="my-1 mr-2" for="sort">Дата выдачи книг</label>
                    <select class="custom-select my-1 mr-sm-4" id="dateBook">
                        <option selected value="all">-</option>
                    </select>
                    <div class="custom-control custom-checkbox my-1 mr-sm-2">
                      <input type="checkbox" class="custom-control-input" id="bookOnHands">
                      <label class="custom-control-label" for="availableCheck">Есть книги на руках</label>
                    </div>
                </div>
                <div class="form-inline">
                    <label class="my-1 mr-2" for="sort">Книга на рука</label>
                    <select class="custom-select my-1 mr-sm-4" id="bookFilter">
                        <option selected value="all">-</option>
                    </select>
                </div>
            </div>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Имя</th>
                    <th scope="col">email</th>
                    <th scope="col">Номер</th>
                    <th scope="col">Дата регистрации</th>
                </tr>
            </thead>
            <tbody id="tbody">
                
                
            </tbody>
        </table>
        <script src="/js/adminUsers.js"></script>
    </body>
</html>
