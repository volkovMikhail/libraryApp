<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('./partials/head') %>
        <title>Меню администратора</title>
    </head>
    <body>
        <%- include('./partials/navbar') %> <%-
        include('./partials/adminHeader') %>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Имя</th>
                    <th scope="col">email</th>
                    <th scope="col">Дата регистрации</th>
                </tr>
            </thead>
            <tbody>
                <% for(let i = 0; i < users.length ;i++){ %>
                <tr>
                    <td style="font-size: small">
                        <a href="/user/<%- users[i]._id %>"
                            ><%- users[i]._id %></a
                        >
                    </td>
                    <td><%- users[i].name %></td>
                    <td><%- users[i].email %></td>
                    <td><%- users[i].regDate %></td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </body>
</html>
