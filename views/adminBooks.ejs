<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('./partials/head') %>
        <title>Меню администратора</title>
    </head>
    <body>
        <%- include('./partials/navbar') %> <%-
        include('./partials/adminHeader') %>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Название</th>
                    <th scope="col">Действие</th>
                </tr>
            </thead>
            <tbody>
                <% for(let i = 0; i < books.length ;i++){ %>
                <tr>
                    <td style="font-size: small"><%- books[i]._id %></td>
                    <td>
                        <a href="/book/<%- books[i]._id %>"><%- books[i].name %></a>
                    </td>
                    <td class="form-inline">
                        <form
                            class="m-1"
                            action="/delete/book/<%- books[i]._id %>"
                            method="GET"
                        >
                            <button class="btn btn-danger" type="submit">
                                Удалить
                            </button>
                        </form>
                    </td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </body>
</html>
